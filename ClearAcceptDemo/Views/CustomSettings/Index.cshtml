@model CustomSettingsViewModel
@{
ViewData["Title"] = "ClearAccept Demo";
ViewData["Subtitle"] = "Custom Settings";
}

<div class="container-fluid form-container">
    <div class="card mb-5 shadow-sm text-left">
        <div class="card-header">
            <h5 style="float:left">Settings</h5>
            <a href="~/Home"><button class="btn btn-sm btn-secondary mr-2" id="close"
                    style="float:right">Close</button></a>
            <form id="reset-form" method="post" asp-action="Reset">
                <button type="submit" class="btn btn-sm btn-danger mr-2" id="reset" style="float:right">Reset</button>
            </form>
        </div>
        <form id="settings-form" method="post" asp-action="Save">
            <div class="card-body p-5">
                <div class="card mb-5">
                    <div class="card-header">
                        <strong>Transact Credentials</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="custom-label">Client Id</label>
                                <input type="text" class="form-control" asp-for="TransactCredentials.ClientId"
                                    name="TransactCredentials.ClientId" placeholder="Client Id" />
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="custom-label">Client Secret</label>
                                <input type="text" class="form-control" asp-for="TransactCredentials.ClientSecret"
                                    name="TransactCredentials.ClientSecret" placeholder="Client Secret" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-5">
                    <div class="card-header">
                        <strong>Identifiers</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col form-group">
                                <label class="custom-label">Plaform Id</label>
                                <input type="text" class="form-control" asp-for="Identifiers.PlatformId"
                                    name="Identifiers.PlatformId" placeholder="Platform Id" />
                            </div>
                            <div class="col form-group">
                                <label class="custom-label">Merchant Id</label>
                                <input type="text" class="form-control" asp-for="Identifiers.MerchantId"
                                    name="Identifiers.MerchantId" placeholder="Merchant Id" />
                            </div>
                            <div class="col form-group">
                                <label class="custom-label">Merchant Account Id</label>
                                <input type="text" class="form-control" asp-for="Identifiers.MerchantAccountId"
                                    name="Identifiers.MerchantAccountId" placeholder="Merchant Account Id" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-5">
                    <div class="card-header">
                        <strong>PaymentRequest Preset</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col form-group">
                                <label class="custom-label">Channel</label>
                                <input type="text" class="form-control" asp-for="PaymentRequest.Channel"
                                    name="PaymentRequest.Channel" placeholder="Channel" />
                            </div>
                            <div class="col form-group">
                                <label class="custom-label">Currency</label>
                                <input type="text" class="form-control" asp-for="PaymentRequest.Currency"
                                    name="PaymentRequest.Currency" placeholder="Currency" />
                            </div>
                            <div class="col form-group">
                                <label class="custom-label">Amount</label>
                                <input type="text" class="form-control" asp-for="PaymentRequest.Amount"
                                    name="PaymentRequest.Amount" placeholder="Amount" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="custom-label">Customer First Name</label>
                                <input type="text" class="form-control" asp-for="PaymentRequest.CustomerInfo.FirstName"
                                    name="PaymentRequest.CustomerInfo.FirstName" placeholder="First Name" />
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="custom-label">Customer Last Name</label>
                                <input type="text" class="form-control" asp-for="PaymentRequest.CustomerInfo.LastName"
                                    name="PaymentRequest.CustomerInfo.LastName" placeholder="Last Name" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col form-group">
                                <label class="custom-label">Customer Phone Number</label>
                                <input type="text" class="form-control"
                                    asp-for="PaymentRequest.CustomerInfo.PhoneNumber"
                                    name="PaymentRequest.CustomerInfo.PhoneNumber" placeholder="Phone Number" />
                            </div>
                            <div class="col form-group">
                                <label class="custom-label">Customer Email Address</label>
                                <input type="text" class="form-control" asp-for="PaymentRequest.CustomerInfo.Email"
                                    name="PaymentRequest.CustomerInfo.Email" placeholder="Email Address" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label class="custom-label">Customer Address Line 1</label>
                                <input type="text" class="form-control"
                                    asp-for="PaymentRequest.CustomerInfo.BillingAddress.AddressLine1"
                                    name="PaymentRequest.CustomerInfo.BillingAddress.AddressLine1"
                                    placeholder="Address Line 1" />
                            </div>
                            <div class="col-md-12 form-group">
                                <label class="custom-label">Customer Address Line 2</label>
                                <input type="text" class="form-control"
                                    name="PaymentRequest.CustomerInfo.BillingAddress.AddressLine2"
                                    asp-for="PaymentRequest.CustomerInfo.BillingAddress.AddressLine2"
                                    placeholder="Address Line 2" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col form-group">
                                <label class="custom-label">Customer City</label>
                                <input type="text" class="form-control"
                                    asp-for="PaymentRequest.CustomerInfo.BillingAddress.City"
                                    name="PaymentRequest.CustomerInfo.BillingAddress.City" placeholder="City" />
                            </div>
                            <div class="col form-group">
                                <label class="custom-label">Customer County</label>
                                <input type="text" class="form-control"
                                    asp-for="PaymentRequest.CustomerInfo.BillingAddress.County"
                                    name="PaymentRequest.CustomerInfo.BillingAddress.County" placeholder="County" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col form-group">
                                <label class="custom-label">Customer Country</label>
                                <input type="text" class="form-control"
                                    asp-for="PaymentRequest.CustomerInfo.BillingAddress.Country"
                                    name="PaymentRequest.CustomerInfo.BillingAddress.Country" placeholder="Country" />
                            </div>
                            <div class="col form-group">
                                <label class="custom-label">Customer Postal Code</label>
                                <input type="text" class="form-control"
                                    name="PaymentRequest.CustomerInfo.BillingAddress.PostalCode"
                                    asp-for="PaymentRequest.CustomerInfo.BillingAddress.PostalCode"
                                    placeholder="Post Code" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col form-group">
                                <label class="custom-label">Platform Customer Reference</label>
                                <input type="text" class="form-control"
                                    asp-for="PaymentRequest.PlatformReferences.CustomerReference"
                                    name="PaymentRequest.PlatformReferences.CustomerReference" placeholder="Customer Reference" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-right">
                <button type="submit" class="btn btn-sm btn-primary" id="save">Save</button>
            </div>
        </form>
    </div>
</div>